<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
  
  <servlet>
        <servlet-name>XmlRpcServlet</servlet-name>
        <servlet-class>org.fiteagle.delivery.xmlrpc.FITeagleServlet</servlet-class>
        <init-param>
          <param-name>enabledForExtensions</param-name>
          <param-value>true</param-value>
        </init-param>
  </servlet>
  <servlet-mapping>
        <servlet-name>XmlRpcServlet</servlet-name>
        <url-pattern>/api/sfa/*</url-pattern>
  </servlet-mapping>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>XmlRpcServlet</web-resource-name>
      <url-pattern>/api/sfa/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <welcome-file-list>
    <welcome-file>gui/index.html</welcome-file>
  </welcome-file-list>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/gui/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Jersey REST Servlet</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
          <param-name>com.sun.jersey.config.property.packages</param-name>
          <param-value>org.fiteagle.interactors.groupmanagement</param-value>
    </init-param>    
    <init-param>
        <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
        <param-value>true</param-value>
    </init-param>
           <load-on-startup>1</load-on-startup>         
  </servlet>
  <servlet-mapping>

     <servlet-name>Jersey REST Servlet</servlet-name>
     <url-pattern>/api/v1/*</url-pattern>
  </servlet-mapping>  

  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/api/v1/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/api/fed4fire/*</url-pattern>
  </filter-mapping>
  
  <listener>
   <listener-class>org.fiteagle.delivery.rest.fiteagle.ServletConfig</listener-class>
  </listener>
  
</web-app>

