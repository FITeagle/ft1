<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="Derby" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.fiteagle.core.userdatabase.User</class>
		<class>org.fiteagle.core.userdatabase.UserPublicKey</class>
		<class>org.fiteagle.core.groupmanagement.Group</class>

		<properties>
			<property name="eclipselink.logging.level" value="SEVERE" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:db;create=true" />
			<property name="javax.persistence.jdbc.user" value="default" />
			<property name="javax.persistence.jdbc.password" value="default" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>

	<persistence-unit name="InMemory" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.fiteagle.core.userdatabase.User</class>
		<class>org.fiteagle.core.userdatabase.UserPublicKey</class>
		<class>org.fiteagle.core.groupmanagement.Group</class>
		<properties>
			<property name="eclipselink.logging.level" value="SEVERE" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:testing;create=true" />
			<property name="javax.persistence.jdbc.user" value="default" />
			<property name="javax.persistence.jdbc.password" value="default" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
		</properties>
	</persistence-unit>
</persistence>